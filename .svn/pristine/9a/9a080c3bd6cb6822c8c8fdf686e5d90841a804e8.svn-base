.login_page{
	position: absolute;
	background: url(../images/loginBg.png);
	background-size: cover;
	height: 100%;
	width: 100%;
}
.login_box{
	width: 896px;
	position: absolute;
	z-index: 1;
	top: calc((100% - 398px)/2);
	left: calc((100% - 896px)/2);
}
.left{
	float: left;
	width: 448px;
	background: url(../images/boxBg.png);
	background-size: cover;
	height: 398px;
}
.left img{
	display: block;
	width: 232px;
	height: 129px;
	margin: 0 auto;
	margin-top: 135px;
}
.right{
	float: right;
	width: 448px;
	background: white;
	height: 398px;
	text-align: center;
}
.right .title{
	padding-top: 62px;
	color: #333333;
	font-family: "楷体","楷体_GB2312";
	font-size: 36px;
	margin-bottom: 20px;
}
.right .desc{
	color: #999999;
	font-size: 14px;
	margin-bottom: 50px;
}
.right input{
	color: #333333;
	font-size: 14px;
	border: none;
	border-bottom: 1px solid #c2c2c2;
	width: 244px;
	outline: none;
	margin-bottom: 30px;
	padding-bottom: 10px;
	text-align: center;
}
.right .login{
	display: block;
	border-radius: 22px;
	height: 46px;
	line-height: 46px;
	width: 244px;
	color: white;
	border: none;
	margin: 0 auto;
	background: #7788c7;
	font-size: 16px;
	outline: none;
	cursor: pointer;
}
.login_page .copyright{
	text-align: center;
	position: absolute;
	z-index: 1;
	color: white;
	font-size:14px ;
	width: 100%;
	text-align: center;
	bottom: 78px;
}
